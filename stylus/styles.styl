@import url("https://fonts.googleapis.com/css?family=Open+Sans:400,300,700,600");
@import url("https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css");
@import url("grid.min.css");
@font-face {
    font-family: avenir;
    src: url("..fonts/avenir.otf");
}

open = "Open Sans", Helvetica
nav = 4em
orange = #F46942
mobile = 800px
*
	box-sizing border-box
html,
body
	position: relative
	height auto
	margin 0
	padding 0
body
	display block
	color #444
	font-family open
	padding-top nav
	input
		&:focus
			outline none
	a
		text-decoration none
		color inherit
		cursor pointer
		&:visited,
		&:focus,
		&:hover
			text-decoration none
			color inherit
	.nav-bar
		display block
		background-color #fff
		position: fixed
		top 0
		right 0
		left 0
		z-index: 9999
		box-shadow 0 3px 3px rgba(0, 0, 0, .2)
		&.mobile
			display none
			width 100%
			cursor pointer
			.father
				width 50%
				display inline-block
				flex-grow 1
				height nav
				&.logo
					background-color orange
					min-width 15em
					.burger
						display inline-block
						width 3.8em
						height nav
						padding 1em
						cursor pointer
						.menu
							position: fixed
							width 100%
							min-height 100%
							background-color orange
							left 0
							top 4em
							opacity 0
							z-index -999
							visibility hidden
							margin 0
							padding 2em 0
							.item
								list-style none
								padding 1em 0
								width 90%
								margin 0 auto
								position: relative
								color #fff
								font-family avenir
								font-weight bold
								&:after
									content ''
									height 3px
									background-color #fff
									width 100%
									display block
									position: absolute
									bottom 0
									left 0
									right 0
								&:last-of-type
									&:after
										content none
								&:hover
									a
										padding-left .7em
										transition all .3s
								a
									color inherit
						span
							height 2px
							margin .5em 0
							width 100%
							display block
							background-color #fff
							&:nth-child(1)
								margin-top .25em
						&.alt
							.menu
								opacity 1
								transition all .3s
								z-index: 99
								visibility visible
							span
								&:nth-child(1)
									transform rotate(45deg)
									transform-origin center left
									transition all .3s
								&:nth-child(2)
									opacity 0
									transition all .2s
								&:nth-child(3)
									transform rotate(-45deg)
									transform-origin center left
									transition all .2s
						&.unalt
							.menu
								opacity 0
								transition all .3s
								z-index: -999
								visibility hidden
							span
								&:nth-child(1)
									transform rotate(0)
									transform-origin center left
									transition all .3s
								&:nth-child(2)
									opacity 1
									transition all .2s
								&:nth-child(3)
									transform rotate(0)
									transform-origin center left
									transition all .2s
					.brandname
						padding .22em .8em
						font-weight 700
						vertical-align top
						text-align center
						display inline-block
						color #fff
						font-family avenir
						font-size 1.3em
						span
							display block
							font-size .8em
							font-weight 600
				&.calculator
					color orange
					padding 1.1em
					text-align center
					cursor pointer
					&:hover
						background-color orange
						transition all .3s
						span
							color #fff
							transition all .3s
					span
						text-transform uppercase
						font-weight bold
						font-size .9em
						color inherit
			@media screen and (max-width: mobile)
				display flex
		&.desktop
			width 100%
			display flex 
			.logo
				height nav
				width 10em
				display inline-block
				flex-shrink 1
			.menu
				padding 0
				margin 0
				flex-grow 1
				display flex
				vertical-align top
				height nav
				.item
					display inline-block
					list-style none
					flex-grow 1
					text-align center
					&:before
						content ''
						height 3px
						display block
						width 100%
						background orange
					&:hover
						background #fafafa
						transition all .3s
						a
							color orange
							transition color .3s
						&:before
							transition all .3s
							height 5px
					a
						display block
						width 100%
						height 100%
						padding 1.5em 0
						position: relative
						text-transform uppercase
						font-size .8em
						font-weight 600
						&:after
							content ''
							height 1.5em
							background #ddd
							width 1px
							display block
							position: absolute
							right 0px
							top 1.5em
			@media screen and (max-width: mobile)
				display none
.image
	background-size cover
	background-position center center
	background-repeat no-repeat
	&.featured
		height 35em
		background-color #666
		width 100%
.bulletin
	width 100%
	position: relative
	height auto
	padding 3em 5em
	&.blue
		background-color #20318D
		color #fff
	.button
		padding .2em 1.5em
		font-size 1.3em
		text-transform uppercase
		background-color #A5A8B5
		border-radius 3px
		display inline-block
		cursor pointer
		&:hover
			background-color #6F717D
			transition all .3s
	.additional-info
		float right
		padding-top .5em
		.info
			padding 0 1em
			color #fff
			display inline-block
			&:last-of-type
				border-left 1px solid #ddd
.container
	padding 3em 5em
	.leaf
		position: relative
		&:after
			content ''
			height 10em
			width 10em
			position: absolute
			right -5em
			top -1em
			z-index -1
			background-image url('../img/leaf.png')
			background-repeat no-repeat
			background-size cover
			opacity .5
	.upper
		text-transform uppercase
	.featured-text
		color #666
		text-transform uppercase
		text-align center
		font-size 1.5em
		font-weight bold
		font-family avenir
		max-width 30em
		margin 0 auto
		padding 1em 0
		&.orange
			color orange
		&.semi
			font-weight 600
			font-size 1.2em
			max-width initial
			text-align left
			text-transform none
	.pre
		position: relative
		padding 1em 2em
		max-width 800px
		margin 4em auto 7em
		font-family open
		font-weight 100
		&:before
			content ''
			width 5px
			height 100%
			position: absolute
			top 0
			bottom 0
			left 0
			background-color orange
	.blog-feed
		.blog
			width 100%
			min-height 12em
			background-color #666
			overflow hidden
			position: relative
			background-position center center
			background-size cover
			background-repeat no-repeat
			cursor pointer
			&:hover
				.orange-box
					opacity 1
					transition all .3s
			.orange-box
				background-color orange
				width 120%
				height 12em
				display block
				position: absolute
				transform rotate(135deg)
				left -50%
				top -5em
				z-index: 0
				opacity .7
			.title
				color #fff
				z-index: 1
				position: absolute
				text-transform uppercase
				max-width 8em
				font-size .75em
				font-family avenir
				top 1em
				left 1em
				font-weight 500
				&:after
					content 'm√©xico solar'
					position: absolute
					bottom -2em
					left 0
					text-transform uppercase
					font-size .7em
					width 8em
					
.footer
	background-color #f0f0f0
	display block
	padding 3em 0
	.social
		display inline-block
		float right
		padding-top 1em
		.network
			font-size 1.5em
			display inline-block
			margin-left .5em
			border 3px solid #666
			border-radius 100%
			width 1.7em
			height 1.7em
			&:hover
				border-color #999
				color #999
				transition all .3s
			i
				display block
				text-align center
				line-height 1.5em
	.newsletter
		text-transform uppercase
		font-family avenir
		font-weight 600
		display inline-block
		.inputs
			display block
			input
				display inline-block
				background-color #D7D7D7
				border none
				height 2em
				padding 0 1em
				text-transform uppercase